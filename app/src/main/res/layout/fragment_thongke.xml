<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FCFDFD"
    android:gravity="center"
    android:orientation="vertical"
    tools:context="com.example.quanlythuchi.fragment.ThongkeFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Thống Kê"
        android:textColor="#9575CD"
        android:textSize="30dp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#9575CD"
            android:paddingLeft="10dp"
            android:text="Tổng thu nhập"
            android:textColor="#ffffff"
            android:textSize="30dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#11000000"
            android:gravity="center">

            <TextView
                android:id="@+id/edtTongSoTienThu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="Line 1"
                android:textSize="30dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="VNĐ"
                android:layout_toRightOf="@+id/edtTongSoTienThu"
                android:textSize="30dp"/>


        </RelativeLayout>



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#9575CD"
            android:paddingLeft="10dp"
            android:text="Tổng khoản chi"
            android:textColor="#ffffff"
            android:textSize="30dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:gravity="center"
            android:background="#11000000"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/edtTongSoTienChi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="10dp"
                android:text="Line 2"
                android:textSize="30dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="10dp"
                android:text="VNĐ"
                android:layout_toRightOf="@+id/edtTongSoTienChi"
                android:textSize="30dp" />


        </RelativeLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#9575CD"
            android:paddingLeft="10dp"
            android:text="Khoản dư còn lại"
            android:textColor="#ffffff"
            android:textSize="30dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#11000000"
            android:gravity="center">

            <TextView
                android:id="@+id/edtTongTien"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="Line 3"
                android:textSize="30dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/edtTongTien"
                android:padding="10dp"
                android:text="VNĐ"
                android:textSize="30dp" />

        </RelativeLayout>


    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="Hãy chi tiêu hợp lý bạn nhé !"
        android:textColor="#9575CD"
        android:textSize="20dp"
        android:textStyle="bold" />


</LinearLayout>